<%   @objects = Category.seek_all  %>
<h2> VIEWING ALL CATEGORIES </h2>
  
<pre>
  <% index = "id".ljust(5)+"name".ljust(15)+"cost".ljust(6)+"description" %><%= index %>
  
  <% @objects.each do |object|
   entry = (object.id.to_s.ljust(5) + object.name.ljust(15) + object.cost.to_s.ljust(6) + object.description) %> <%= entry %>
  <% end %>
  
</pre>

<form action="/add" method="post">
  <input type=submit name=add value="Add New">
  <input type=text name=type value=<%= @objects[0].class %> readonly>
</form><br>
<form action="/edit" method="post">
  Enter ID to<input type=number name=edit_id><input type=submit name=edit value="Edit">
  <input type=text name=type value=<%= @objects[0].class %> readonly>
</form><br>
<form action="/del" method="post">
  Enter ID to<input type=number name=del_id><input type=submit name=edit value="Delete">
  <input type=text name=type value=<%= @objects[0].class %> readonly>
</form><br>